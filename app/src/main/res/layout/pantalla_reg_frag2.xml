<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Frag2"
    android:background="@color/gray"
    android:id="@+id/contFrag2">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="UseCompoundDrawables,UselessParent">  <!-- Puedes cambiar a "horizontal" si lo necesitas -->

        <!-- AquÃ­ puedes agregar tus elementos que deseas dentro del LinearLayout -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="40dp"
            android:background="@color/black"
            android:text="@string/Usr_rgs"
            android:textColor="#FFEBEE"
            android:textSize="30sp"
            tools:ignore="RtlHardcoded"
            />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/info_img_login"
            android:src="@drawable/register"
            tools:ignore="ImageContrastCheck" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/Hint_usr"
            android:minHeight="48dp"
            android:textColorHint="#FFEBEE"
            tools:ignore="VisualLintTextFieldSize"
            android:layout_marginTop="25dp"
            android:textAlignment="center"/>

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:hint="@string/hint_contrase"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:textColorHint="#FFEBEE"
            tools:ignore="VisualLintTextFieldSize"
            android:layout_marginTop="25dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/Registro_button"
            android:layout_marginTop="25dp"
            android:onClick="registrarUsuario"
            tools:ignore="UsingOnClickInXml" />


    </LinearLayout>
</FrameLayout>